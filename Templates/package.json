{
  "name": "pp365-templates",
  "version": "1.11.0",
  "main": "generateTemplate.js",
  "scripts": {
    "build": "npm run generate-project-templates && npm run generate-resx-json",
    "lint": "echo \"No linting configured\"",
    "generate-resx-json": "node ./.tasks/generate-resx-json.js",
    "generate-resx-ts": "node ./.tasks/generate-resx-ts.js",
    "generate-project-templates": "npm run generate-resx-json && npm run generate-resx-ts && node ./.tasks/generate-project-templates.js",
    "validate-project-template": "node ./.tasks/validate-project-template.js",
    "validate-loc": "node node_modules/pzl-spfx-tasks --validate-loc --loglevel verbose && npm run validate-project-template"
  },
  "dependencies": {
    "@fluentui/react-components": "~9.52.0",
    "@fluentui/react-icons": "~2.0.240",
    "@ptkdev/json-token-replace": "^1.2.2",
    "dotenv": "~16.1.3",
    "resx-json-typescript-converter": "^1.0.1",
    "glob": "~11.0.2"
  },
  "devDependencies": {
    "@types/lodash": "~4.14.195",
    "pzl-spfx-tasks": "0.5.15-1",
    "replace": "1.2.2",
    "xml2js": "^0.6.2"
  },
  "config": {
    "pzl-spfx-tasks": {
      "validateloc": {
        "path": "../SharePointFramework/PortfolioWebParts/src/loc/shared",
        "interface": "ISharedResources",
        "dts": "shared.d.ts",
        "output": "./resx-ts-report.json"
      }
    }
  },
